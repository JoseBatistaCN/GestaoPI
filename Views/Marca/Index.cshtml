@model IEnumerable<GestaoPI.Models.Marca>

@{
    ViewData["Title"] = "Marcas";
}

<h1>@ViewData["Title"]</h1>


<div class="card">
    <div class="card-body">
        <div class="mb-3 d-flex justify-content-end">
            <a asp-action="Create"><button class="btn btn-primary" type="button">Cadastrar</button></a>
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.Titulo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Apresentacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Situacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Deposito)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Concessao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Anotacao)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apresentacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Situacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Deposito)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Concessao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Anotacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Codigo">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Codigo">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Codigo">Delete</a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
