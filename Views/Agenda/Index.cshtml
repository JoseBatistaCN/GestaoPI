<h1>@ViewData["Title"]</h1>

<div class="card">
	<div class="card-body">
		<div class="form-check">
			<div class="row">
				<h5>Filtros</h5>
				<div class="col">
					<div>
						<input class="form-check-input" type="radio" name="flexRadioDefault" id="flexRadioDefault1" checked>
