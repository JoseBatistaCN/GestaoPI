@model IEnumerable<GestaoPI.Models.Patente>
@{ ViewData["Title"] = "Patentes";}

<div>
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb breadcrumb-custom overflow-hidden text-center bg-body-tertiary border rounded-3">
      <li class="breadcrumb-item">
        <a class="link-body-emphasis fw-semibold text-decoration-none" href="#">
          <svg class="bi" width="16" height="16"><use xlink:href="#house-door-fill"></use></svg>
          Home
        </a>
      </li>
      <li class="breadcrumb-item">
        <a class="link-body-emphasis fw-semibold text-decoration-none" href="#">Processos</a>
      </li>
      <li class="breadcrumb-item active" aria-current="page">
        Patentes
      </li>
    </ol>
  </nav>
</div>

<h1>@ViewData["Title"]</h1>
<form action="">
  <div class="input-group">
    <input type="text" class="form-control" placeholder="Pesquisar">
    <button class="btn btn-outline-secondary" type="button"><i class="bi bi-search"></i></button>
  </div>
</form>

<div class="mt-3 d-flex justify-content-end">
    <p>
      <a asp-action="Create"><button type="button" class="btn btn-primary">Cadastar</button></a>
    </p>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr class="text-center">
        <th>@Html.DisplayNameFor(model => model.Codigo)</th>
        <th>@Html.DisplayNameFor(model => model.Titulo)</th>
        <th>@Html.DisplayNameFor(model => model.Deposito)</th>
        <th>@Html.DisplayNameFor(model => model.Exame)</th>
        <th>@Html.DisplayNameFor(model => model.Publicacao)</th>
        <th>Detalhes</th>
        <th>Despachos</th>
        <th>Servi√ßos</th>
        <th>Anuidades</th>
        <th>Documentos</th>
        <th>Editar</th>
      </tr>
    </thead>
    <tbody>
      @foreach (var item in Model) {
      <tr>
      <td class="text-nowrap">@Html.DisplayFor(modelItem => item.Codigo)

      </td>
      <td class="flex-wrap text-ju">@Html.DisplayFor(modelItem => item.Titulo)

      </td>
      <td>@Html.DisplayFor(modelItem => item.Deposito)

      </td>
      <td>@Html.DisplayFor(modelItem => item.Exame)

      </td>
      <td>@Html.DisplayFor(modelItem => item.Publicacao)

      </td>
      <td class="text-center">
        <a asp-action="Details" asp-route-id="@item.Codigo"><i class="bi bi-eye"></i></a>
      </td>
      <td class="text-center">
        <i class="bi bi-arrow-down-square"></i>
      </td>
      <td class="text-center"><a asp-controller="ServicoPatente" asp-action="index" asp-route-id="@item.Codigo"><i class="bi bi-arrow-up-square"></i></a></td>
      <td class="text-center"><i class="bi bi-calendar"></i></td>
      <td class="text-center"><i class="bi bi-archive"></i></td>
      <td class="text-center"><a asp-action="Edit" asp-route-id="@item.Codigo"><i class="bi bi-gear"></i></a></td>
    </tr>
        }
    </tbody>
  </table>
</GestaoPI.Models.Patente>