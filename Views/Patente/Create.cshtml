@model GestaoPI.Models.Patente 
@{ ViewData["Title"] = "Cadastrar Processo"; }

<h1>Cadastrar Patente</h1>
<div class="card">
    <div class="card-body">
        <form asp-action="Create" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger col-12"></div>
            <div class="col-6 form-group">
                <label asp-for="Codigo" class="control-label"></label>
                <input asp-for="Codigo" class="form-control" placeholder="BR ZZ XXXX YYYYYY K" />
                <span asp-validation-for="Codigo" class="text-danger"></span>
            </div>
            <div class="col-6 form-group">
                @Html.LabelFor(model => model.Situacao, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.Situacao, new SelectList(Enum.GetValues(typeof(GestaoPI.Models.Enums.PatenteSituacao))), "Selecione", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control" />
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Resumo" class="control-label"></label>
                <textarea asp-for="Resumo" class="form-control" rows="5"></textarea>
                <span asp-validation-for="Resumo" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="Deposito" class="control-label"></label>
                <input type="date" asp-for="Deposito" class="form-control" />
                <span asp-validation-for="Deposito" class="text-danger"></span>
            </div>
            <div class="col-6"></div>
            <div class="form-group col-3">
                <label asp-for="Exame" class="control-label"></label>
                <input type="date" asp-for="Exame" class="form-control" />
                <span asp-validation-for="Exame" class="text-danger"></span>
            </div>
            <div class="form-group col-3">
                <label asp-for="Publicacao" class="control-label"></label>
                <input type="date" asp-for="Publicacao" class="form-control" />
                <span asp-validation-for="Publicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Anotacao" class="control-label"></label>
                <textarea asp-for="Anotacao" class="form-control"></textarea>
                <span asp-validation-for="Anotacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Inventores, htmlAttributes: new { @class = "control-label" })
                @Html.DropDownListFor(model => model.Inventores, new MultiSelectList(ViewBag.Inventores, "Id", "Nome"), new { @class = "form-control", @multiple = "multiple" })
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
        <div class="my-3">
            <a asp-action="Index">Voltar</a>  
        </div>
    </div>
</div>

@section Scripts { 
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");
} 
}